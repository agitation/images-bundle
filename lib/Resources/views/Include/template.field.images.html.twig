<template id="agit-images-admin-field">
    <div class="images-field">
        <input type="file" multiple accept="image/*">

        <div class="thumbs"></div>

        <div class="add box">
            <span class="fa fa-plus"></span>
        </div>
    </div>

    <div class="thumb box processing">
        <div class="image">
            <div class="spinner"></div>
            <canvas class="preview" height="110" width="110"></canvas>
        </div>

        <div class="ops">
            <span class="fa fa-search enlarge" title="{{ t("show large preview") }}"></span>
            <span class="fa fa-rotate-right rotate" title="{{ t("rotate right by 90 degrees") }}"></span>
            <span class="fa fa-comment desc" title="{{ t("edit description") }}"></span>
            <span class="fa fa-remove remove" title="{{ t("remove image") }}"></span>
        </div>
    </div>

    <div class="large-image">
        <img src="" alt="">
    </div>

    <span class="modal-header">{{ t("Image description") }}</span>
</template>
